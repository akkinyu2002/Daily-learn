<GlassCard@MDCard>:
    md_bg_color: 0.1, 0.1, 0.1, 0.5 # Semi-transparent dark
    radius: [20, 20, 20, 20]
    elevation: 2
    padding: "10dp"
    
<MissionScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"
        md_bg_color: 0.05, 0.05, 0.1, 1 # Deep dark blue/black background

        MDLabel:
            text: "Today's Mission"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 0, 0.96, 1, 1 # Neon Cyan
            halign: "left"
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            MDBoxLayout:
                id: task_list
                orientation: 'vertical'
                spacing: "15dp"
                adaptive_height: True

<AddScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"
        md_bg_color: 0.05, 0.05, 0.1, 1

        MDLabel:
            text: "Magic Add"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 0, 0.96, 1, 1
            halign: "center"
            size_hint_y: None
            height: "50dp"

        MDTextField:
            id: input_field
            hint_text: "Describe your task..."
            mode: "rectangle"
            multiline: True
            size_hint_y: None
            height: "100dp"
            line_color_focus: 0, 0.96, 1, 1

        MDFillRoundFlatButton:
            text: "Analyze & Add"
            pos_hint: {"center_x": 0.5}
            on_release: root.analyze_task()
            md_bg_color: 0, 0.96, 1, 1
            text_color: 0, 0, 0, 1

<MoodScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "20dp"
        spacing: "20dp"
        md_bg_color: 0.05, 0.05, 0.1, 1

        MDLabel:
            text: "How do you feel?"
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 0, 0.96, 1, 1
            halign: "center"
            size_hint_y: None
            height: "50dp"

        MDGridLayout:
            cols: 2
            spacing: "20dp"
            adaptive_height: True
            pos_hint: {"center_y": 0.5}

            MDFillRoundFlatButton:
                text: "Focused ðŸ§ "
                md_bg_color: 0, 0.96, 1, 0.8
                on_release: root.set_mood("Focused")
                size_hint_x: 1

            MDFillRoundFlatButton:
                text: "Tired ðŸ˜´"
                md_bg_color: 0.5, 0.5, 0.5, 0.8
                on_release: root.set_mood("Tired")
                size_hint_x: 1
            
            MDFillRoundFlatButton:
                text: "Motivated ðŸ”¥"
                md_bg_color: 1, 0.5, 0, 0.8
                on_release: root.set_mood("Motivated")
                size_hint_x: 1

            MDFillRoundFlatButton:
                text: "Stressed ðŸ˜°"
                md_bg_color: 0.8, 0.2, 0.2, 0.8
                on_release: root.set_mood("Stressed")
                size_hint_x: 1
